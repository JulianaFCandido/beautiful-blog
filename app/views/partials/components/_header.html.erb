<header class="top-0 w-full shadow mb-2 px-4 py-5">
  <div class="flex flex-wrap sm:flex-nowrap items-center justify-between mx-4 sm:mx-14">
    <section class="flex items-center w-full">
      <%= link_to root_path do %>
        <%= image_tag asset_path("favicon.ico"), class: "my-0 mr-2 w-8 h-8" %>
      <% end %>

      <h2 class="font-black text-2xl tracking-wide">
        <%= t("app_name") %>
      </h2>

      <label class="cursor-pointer text-xl sm:hidden ms-auto" for="navbar-open">
        <i class="material-symbols-rounded">menu</i>
      </label>
    </section>

    <section>
      <input class="peer hidden" type="checkbox" id="navbar-open">

      <nav aria-label="Header Navigation" class="peer-checked:block hidden pl-2 py-6 sm:block sm:py-0">
        <ul class="flex flex-col gap-y-4 sm:flex-row sm:gap-x-8">
          <li>
            <%= link_to t("navbar.home_item"), root_path, class: "text-gray-600 hover:text-blue-600" %>
          </li>

          <li>
            <%= link_to t("navbar.about_item"), about_path, class: "text-gray-600 hover:text-blue-600" %>
          </li>

          <li>
            <%= link_to t("navbar.articles_item"), articles_path, class: "text-gray-600 hover:text-blue-600" %>
          </li>

          <li>
            <%= link_to t("navbar.contact_item"), new_contact_path, class: "text-gray-600 hover:text-blue-600" %>
          </li>
        </ul>
      </nav>
    </section>
  </div>
</header>
