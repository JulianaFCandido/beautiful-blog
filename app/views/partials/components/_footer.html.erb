<footer class="w-full py-14 sm:py-28 px-4 bg-neutral-800 text-neutral-300">
  <div class="flex flex-col sm:flex-row justify-between gap-6 sm:gap-14 mx-4 sm:mx-14">
    <section class="flex-[0.4]">
      <h2 class="text-xl text-neutral-50 mb-4 sm:mb-9">
        <%= t("app_name") %>
      </h2>

      <p class="py-2 leading-relaxed">
        <small>
          <%= t("footer.description") %>
        </small>
      </p>

      <div class="flex gap-4 mt-6 sm:mt-14">
        <%= link_to 'https://x.com', class:"flex items-center justify-center rounded-full bg-neutral-700 w-14 h-14 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300", target: :blank do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 50 50">
            <path class="fill-white" d="M 11 4 C 7.134 4 4 7.134 4 11 L 4 39 C 4 42.866 7.134 46 11 46 L 39 46 C 42.866 46 46 42.866 46 39 L 46 11 C 46 7.134 42.866 4 39 4 L 11 4 z M 13.085938 13 L 21.023438 13 L 26.660156 21.009766 L 33.5 13 L 36 13 L 27.789062 22.613281 L 37.914062 37 L 29.978516 37 L 23.4375 27.707031 L 15.5 37 L 13 37 L 22.308594 26.103516 L 13.085938 13 z M 16.914062 15 L 31.021484 35 L 34.085938 35 L 19.978516 15 L 16.914062 15 z">
            </path>
          </svg>
        <% end %>

        <%= link_to 'https://facebook.com', class:"flex items-center justify-center rounded-full bg-neutral-700 w-14 h-14 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300", target: :blank do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 50 50">
            <path class="fill-white" d="M25,3C12.85,3,3,12.85,3,25c0,11.03,8.125,20.137,18.712,21.728V30.831h-5.443v-5.783h5.443v-3.848 c0-6.371,3.104-9.168,8.399-9.168c2.536,0,3.877,0.188,4.512,0.274v5.048h-3.612c-2.248,0-3.033,2.131-3.033,4.533v3.161h6.588 l-0.894,5.783h-5.694v15.944C38.716,45.318,47,36.137,47,25C47,12.85,37.15,3,25,3z">
            </path>
          </svg>
        <% end %>

        <%= link_to 'https://instagram.com', class:"flex items-center justify-center rounded-full bg-neutral-700 w-14 h-14 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300", target: :blank do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" viewBox="0 0 50 50">
            <path class="fill-white" d="M 16 3 C 8.83 3 3 8.83 3 16 L 3 34 C 3 41.17 8.83 47 16 47 L 34 47 C 41.17 47 47 41.17 47 34 L 47 16 C 47 8.83 41.17 3 34 3 L 16 3 z M 37 11 C 38.1 11 39 11.9 39 13 C 39 14.1 38.1 15 37 15 C 35.9 15 35 14.1 35 13 C 35 11.9 35.9 11 37 11 z M 25 14 C 31.07 14 36 18.93 36 25 C 36 31.07 31.07 36 25 36 C 18.93 36 14 31.07 14 25 C 14 18.93 18.93 14 25 14 z M 25 16 C 20.04 16 16 20.04 16 25 C 16 29.96 20.04 34 25 34 C 29.96 34 34 29.96 34 25 C 34 20.04 29.96 16 25 16 z">
            </path>
          </svg>
        <% end %>
      </div>
    </section>

    <section class="flex-[0.4]">
      <h2 class="text-xl text-neutral-50 mb-4 sm:mb-9">
        <%= t("footer.information.title") %>
      </h2>

      <ul>
        <li class="py-2">
          <%= link_to root_path, class: "hover:text-blue-600" do %>
            <small>
              <%= t("footer.information.terms_of_use") %>
            </small>
          <% end %>
        </li>

        <li class="py-2">
          <%= link_to root_path, class: "hover:text-blue-600" do %>
            <small>
              <%= t("footer.information.about") %>
            </small>
          <% end %>
        </li>

        <li class="py-2">
          <%= link_to root_path, class: "hover:text-blue-600" do %>
            <small>
              <%= t("footer.information.privacy_policy") %>
            </small>
          <% end %>
        </li>

        <li class="py-2">
          <%= link_to root_path, class: "hover:text-blue-600" do %>
            <small>
              <%= t("footer.information.help") %>
            </small>
          <% end %>
        </li>
      </ul>
    </section>

    <section class="flex-[0.4]">
      <h2 class="text-xl text-neutral-50 mb-4 sm:mb-9">
        <%= t("footer.categories.title") %>
      </h2>

      <ul>
        <li class="py-2">
          <%= link_to root_path, class: "hover:text-blue-600" do %>
            <small>
              <%= t("footer.categories.chefs_dishes") %>
            </small>
          <% end %>
        </li>

        <li class="py-2">
          <%= link_to root_path, class: "hover:text-blue-600" do %>
            <small>
              <%= t("footer.categories.desserts") %>
            </small>
          <% end %>
        </li>

        <li class="py-2">
          <%= link_to root_path, class: "hover:text-blue-600" do %>
            <small>
              <%= t("footer.categories.recipes") %>
            </small>
          <% end %>
        </li>

        <li class="py-2">
          <%= link_to root_path, class: "hover:text-blue-600" do %>
            <small>
              <%= t("footer.categories.life_style") %>
            </small>
          <% end %>
        </li>
      </ul>
    </section>

    <section class="flex-[0.4]">
      <h2 class="text-xl text-neutral-50 mb-4 sm:mb-9">
        <%= t("footer.questions.title") %>
      </h2>

      <p class="py-2 flex gap-4">
        <i class="material-symbols-rounded">pin_drop</i>

        <small>
          <%= t("footer.questions.address") %>
        </small>
      </p>

      <p class="py-2 flex gap-4">
        <i class="material-symbols-rounded">call</i>

        <small>
          <%= t("footer.questions.phone_number") %>
        </small>
      </p>

      <p class="py-2 flex gap-4">
        <i class="material-symbols-rounded">mail</i>

        <small>
          <%= t("footer.questions.email") %>
        </small>
      </p>
    </section>
  </div>

  <section class="flex justify-center mt-11 sm:mt-24">
    <p class="text-center">
      <%= t("footer.copyright", current_year: Date.today.year) %>
    </p>
  </section>
</footer>
